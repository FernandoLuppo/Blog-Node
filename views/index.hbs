<div class="content-home-page">
  <hr />

  {{>_indexPostMsg}}


  <h2>Postagens recentes:</h2>

  {{#each post}}
    <div class="collection-datas">
      <h3>{{title}}</h3>
      <p>{{content}}</p>
      <a href="/post/{{slug}}"><button>Leia mais</button></a>
      <hr />
      <small>Categoria: {{category.name}}</small>
      <br />
      <small>{{date}}</small>
    </div>

  {{else}}

    <h4>Nenhuma postagem</h4>

  {{/each}}

</div>