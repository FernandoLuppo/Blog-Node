{{#if editCategoriesSuccessMessage}}

  <div class="container-success-message">
    <h3>Categoria Editada com Sucesso!!</h3>
  </div>

{{/if}}

<div class="container-edit-error-message">
  {{#if editCategoryErrorMessage}}
    <h3>Não foi possível editar a categoria pois:</h3>

    {{#each editCategoryErrorMessage}}

      <div class="container-error-message">
        <p>{{editCategoriesErrorMessage}}</p>
      </div>

    {{/each}}

  {{/if}}
</div>